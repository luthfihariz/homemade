    <style name="TextAppearance.AppCompat.Label" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/shape_label</item>
        <item name="android:padding">@dimen/spacing_xx_small</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
